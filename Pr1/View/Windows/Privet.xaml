<Window x:Class="Pr1.View.Windows.Privet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pr1.View.Windows"
        mc:Ignorable="d"
        Title="Privet" Height="800" SizeToContent="WidthAndHeight"
        Width="1920" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1000"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="500"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>


        <TextBlock Text="Ну тут без вариантов 5 ☺" Grid.Column="1" 
                   Grid.Row="1" FontSize="80" HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontFamily="Arial"/>
        <Button Name="BtnNext" Grid.Row="2" Grid.Column="1"  
                Content="Войти" Background="White"
                FontSize="80" Click="BtnNext_Click"/>
    </Grid>
    
</Window>
